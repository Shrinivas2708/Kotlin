<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_detail"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER TITLE -->
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journal Title"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/press_start_2p"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:shadowColor="#66000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <!-- DATE -->
        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04 Nov 2025, 10:49 PM"
            android:textSize="13sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFE3B3"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.03" />

        <!-- CONTENT CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_card"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:clipToOutline="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvDetailBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="0.01"
                android:text="This is where your journal content goes..." />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
